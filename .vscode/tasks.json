{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run RAG Chatbot",
            "type": "shell",
            "command": "streamlit",
            "args": ["run", "app.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Install Requirements",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build"
        }
    ]
}